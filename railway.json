{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn SMS.school_app.wsgi:application --bind 0.0.0.0:$PORT",
    "preDeployCommand": "chmod +x deploy.sh && bash deploy.sh",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120
  }
}