{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "pip", "gunicorn"]
        },
        "install": {
          "cmds": [
            "pip install -r requirements.txt"
          ]
        },
        "start": {
          "cmd": "gunicorn --chdir SMS school_app.wsgi"
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn --chdir SMS school_app.wsgi",
    "env": {
      "PORT": "8000",
      "DEBUG": "True",
      "DJANGO_SETTINGS_MODULE": "school_app.settings"
    },
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
